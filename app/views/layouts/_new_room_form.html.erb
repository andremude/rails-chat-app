<%= form_with(model: @room, remote: true, class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
  <%= f.text_field :name, class: "form-control new-room", autocomplete: 'off', placeholder: "Add a new room", required: true %>
  <%= f.submit data: { disable_with: false }, value:"+", class: "btn-add" %>
<% end %>
